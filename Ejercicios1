<!DOCTYPE html>
<html>
  <head>
    <title>Cart Quantity</title>
    
  </head>
  <body>
    <p>Cart Quantity</p>
    <button onclick="
      console.log(`Cart quantity: ${cartQuantity}`);
    ">Show Quantity</button>
    <button onclick="
      cartQuantity++;
      if(cartQuantity > 10){
        console.log('The cart is full');
        cartQuantity--;
      } else{
          console.log(`Cart quantity: ${cartQuantity}`);
        }
    ">Add to Cart</button>
    <button onclick="
    cartQuantity += 2;
    if(cartQuantity > 10){
      console.log('The cart is full');
      cartQuantity-= 2;
    } else{
        console.log(`Cart quantity: ${cartQuantity}`);
      }
    ">+2</button>
    <button onclick="
    cartQuantity += 3;
    if(cartQuantity > 10){
      console.log('The cart is full');
      cartQuantity-=3;
    } else{
        console.log(`Cart quantity: ${cartQuantity}`);
      }
    ">+3</button>
    <button onclick="
    cartQuantity += 4;
    if(cartQuantity > 10){
      console.log('The cart is full');
      cartQuantity-=4;
    } else{
        console.log(`Cart quantity: ${cartQuantity}`);
      }
    ">+4</button>
    <button onclick="
    cartQuantity += 5;
    if(cartQuantity > 10){
      console.log('The cart is full');
      cartQuantity-=5;
    } else{
        console.log(`Cart quantity: ${cartQuantity}`);
      }
    ">+5</button>
    <button onclick="
    cartQuantity--;
    if(cartQuantity < 0){
      console.log('The cart is empty');
      cartQuantity++;
    } else{
        console.log(`Cart quantity: ${cartQuantity}`);
      }
    ">Remove from cart</button>
    <button onclick="
    cartQuantity -= 2;
    if(cartQuantity < 0){
      console.log('The cart is empty');
      cartQuantity+=2;
    } else{
        console.log(`Cart quantity: ${cartQuantity}`);
      }
    ">-2</button>
    <button onclick="
    cartQuantity -= 3;
    if(cartQuantity < 0){
      console.log('The cart is empty');
      cartQuantity+=3;
    } else{
        console.log(`Cart quantity: ${cartQuantity}`);
      }
    ">-3</button>
    <button onclick="
    console.log('Cart was reset.');
    cartQuantity = 0;
    console.log(`Cart quantity: ${cartQuantity}`);
    ">Reset Cart</button>
    <script>
      let cartQuantity = 0;
      let name = 'Alex';
      console.log('My name is ' + name);
    </script>
  </body>
</html>
