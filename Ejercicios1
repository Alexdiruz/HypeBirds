<script>
  let cost = 5 + 2 * 3 + 9;
  console.log(`Cost of food: $${cost}`);
  let tax = cost * 0.1;
</script>

//5f.
<script>
  let cost = 5 + 2 * 3 + 9;
  console.log(`Cost of food: $${cost}`);
  let tax = cost * 0.1;
  console.log(`Tax(10%): $${tax});
</script>

//5g.
<script>
  let cost = 5 + 2 * 3 + 9;
  console.log(`Cost of food: $${cost}`);
  let tax = cost * 0.1;
  console.log(`Tax(10%): $${tax});
  let totalCost = cost + tax;
  console.log(`Total cost: $${totalCost}`);
</script>

//5h.
<!DOCTYPE html>
<html>
  <head>
    <title>Variables</title>
    
  </head>
  <body>
    <p>Cart Quantity</p>
    <button onclick="
      console.log(`Cart quantity: ${cartQuantity}`);
    ">Show Quantity</button>
    <button onclick="
      cartQuantity++;
      console.log(`Cart quantity: ${cartQuantity}`);
    ">Add to Cart</button>
    <button onclick="
    cartQuantity += 2;
    console.log(`Cart quantity: ${cartQuantity}`);
    ">+2</button>
    <button onclick="
    cartQuantity += 3;
    console.log(`Cart quantity: ${cartQuantity}`);
    ">+3</button>
    <button onclick="
    cartQuantity += 4;
    console.log(`Cart quantity: ${cartQuantity}`);
    ">+4</button>
    <button onclick="
    cartQuantity += 5;
    console.log(`Cart quantity: ${cartQuantity}`);
    ">+5</button>
    <button onclick="
    console.log('Cart was reset.');
    cartQuantity = 0;
    console.log(`Cart quantity: ${cartQuantity}`);
    ">Reset Cart</button>
    <script>
      let cartQuantity = 0;
      let name = 'Alex';
      console.log('My name is ' + name);
    </script>
  </body>
</html>

